<%= form_with model: category do |f| %>
  <div class="mb-3">
    <%= f.label :title, 'Category', class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <%= f.submit 'Submit', class: 'btn btn-success' %>
  <%= link_to 'Back', categories_path, class: 'btn btn-secondary' %>
<% end %>
       