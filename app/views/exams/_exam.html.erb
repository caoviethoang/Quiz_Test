<tr>
  <th scope="row" class="col-2">
    <%= exam.id %>
  </th>
  <th scope="row" class="col-2">
    <%= exam.user_id %>
  </th>
  <th scope="row" class="col-3">
    <%= User.find_by(id: exam.user_id).email %>
  </th>
  <td>
    <%= link_to "Generate", generate_exam_path(exam), class: "btn btn-warning" %>
    <%= link_to "Show", exam_path(exam), class: "btn btn-info" %>
    <%= link_to "Delete", exam, method: :delete, data: { confirm: "Are you sure?" },
                                                    class: "btn btn-danger" %>
  </th>
  </td>
</tr>