<aside class="left-sidebar" data-sidebarbg="skin6">
  <div class="scroll-sidebar">
    <nav class="sidebar-nav">
      <ul id="sidebarnav">
        <% if user_signed_in? %>         
          <li class="sidebar-item">              
            <%= link_to categories_path, class: "sidebar-link waves-effect waves-dark sidebar-link" do %>
              <i class="fa fa-bar-chart" aria-hidden="true"></i><b>Categories</b>
            <% end %>
          </li>
          <li class="sidebar-item">              
            <%= link_to questions_path, class: "sidebar-link waves-effect waves-dark sidebar-link" do %>
              <i class="fa fa-question" aria-hidden="true"></i><b>Questions</b>
            <% end %>
          </li>
          <li class="sidebar-item">              
            <%= link_to exams_path, class: "sidebar-link waves-effect waves-dark sidebar-link" do %>
              <i class="fa fa-book" aria-hidden="true"></i><b>Exams</b>
            <% end %>
          </li>
          <li class="sidebar-item">              
            <%= link_to users_path, class: "sidebar-link waves-effect waves-dark sidebar-link" do %>
              <i class="fa fa-user-circle-o" aria-hidden="true"></i><b>Users</b>
            <% end %>
          </li>
        <% else %>
          <li class="sidebar-item pt-2">
            <%= link_to root_path, class: "sidebar-link waves-effect waves-dark sidebar-link" do %>
              <i class="far fa-clock" aria-hidden="true"></i><b>Dashboard</b>
            <% end %>
          </li>  
        <% end %>     
      </ul>
    </nav>
  </div>
</aside>
<style type="text/css">
  .sidebar-link {
    list-style: none;
    text-decoration: none;
  }
</style>