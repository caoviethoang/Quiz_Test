<div class="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="white-box">
          <h2></b>Question information</b></h2>
          <p>Category: <%= @category %></p>
          <p>Kind: <%= @question.kind %></p>
          <p>Title: <%= @question.title %></p>
          <%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-danger' %>
          <%= link_to 'Back', questions_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>
  </div>
</div>